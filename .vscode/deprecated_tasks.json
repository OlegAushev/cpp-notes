{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-std=c++23",
                "-g3",
                "-O0",
                "${file}",
                "-o",
                "${fileWorkspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin",
                "env": {
                    "LC_ALL": "C"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}